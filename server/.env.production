# Production Environment Variables for Render Deployment

# Database - MongoDB Atlas
MONGO_URI=your_mongodb_atlas_connection_string_here
MONGO_DB=shikkha

# Server Configuration
PORT=4000
NODE_ENV=production

# Security Keys (Generate using scripts/generate-secrets.js)
JWT_SECRET=your_production_jwt_secret_here
SESSION_SECRET=your_production_session_secret_here

# Stripe Configuration (Production Keys)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here

# Client URL (Your Vercel Domain)
CLIENT_URL=https://your-app-name.vercel.app

# CORS Origins (Comma-separated for multiple domains)
CORS_ORIGINS=https://your-app-name.vercel.app,https://your-custom-domain.com
